<!DOCTYPE html>
<html>
    <head>
    {% block head %}
        <title>{% block title %}{% endblock %}</title>

        <meta http-equiv='Content-Type' content='text/html' charset='UTF-8'>

        {% block keywords %}{% endblock %}

            <meta name='viewport' content='width=device-width, initial-scale=1'>

            <link rel="stylesheet" href="css/jquery.mobile.custom.structure.css" />

            <link rel="stylesheet" href="css/jquery.mobile.custom.theme.css" />

            <link rel="stylesheet" href="css/jquery.mobile.icons.min.css" />

            <script src="js/jquery-1.11.3.js"></script>

            <script src="js/jquery.mobile-custom.js"></script>

            <meta name='mobile-web-app-capable' content='yes'>

            <meta name='apple-mobile-web-app-capable' content='yes'>

            <meta name='application-name' content='FTWPortal'>

            <link rel='shortcut icon' sizes='192x192' href='/img/applogo.png'>

            <link rel='apple-touch-icon' sizes='192x192' href='/img/applogo.png'>

            <link rel='icon' href='/img/favicon.ico' type='image/x-icon'>

        {% block scripts %}{% endblock %}
    {% endblock %}
        </head>
            <body background='/img/rms.jpg'>
            {% block navigation %}
                {% if loggedin and not admin %}
                    <div class='navbar'>
                        <a href='/user/menu' title='Menu'>Menu</a>
                        <a href='/logout' title='Logout'>Logout</a>
                    </div>
                {% elseif admin %}
                    <div class='navbar'>
                        <a href='manage.php' title='User Management'>Users</a>
                        <a href='confmanage.php' title='Config File Management'>Configs</a>
                        <a href='/logout' title='Logout'>Logout</a>
                    </div>
                {% endif %}
            {% endblock %}
            {% block logopg %}
                {% if loggedin %}
                <div class='logo'>
                    <img class='logo' src='/img/ftw_logo.png' title='FTW Logo' />
                </div>
                <div class='pagebar' title='{{ page }}'>
                    <h2>{{ page }}</h2>
                </div>
                {% endif %}
            {% endblock %}
        {% block messages %}
            {% block info %}
                {% if info is empty %}
                {% else %}
                    {% for hilite in info %}
                         <div class='notify'><br />
                            <div class='ui-widget'>
                                <div class='ui-state-highlight ui-corner-all' style='padding:0 .7em;'>
                                    <p>
                                        <span class='ui-icon ui-icon-info' style='float:left;margin-right:.3em;'></span>
                                        <strong>Info:</strong>
                                        {{ hilite }}
                                    </p>
                                </div>
                            </div><br />
                         </div>
                    {% endfor %}
                {% endif %}
            {% endblock %}
            {% block error %}
                {% if error is empty %}
                {% else %}
                    {% for alert in error %}
                        <div class='notify'><br />
                            <div class='ui-widget'>
                                <div class='ui-state-error ui-corner-all' style='padding:0 .7em;'>
                                    <p>
                                        <span class='ui-icon ui-icon-alert' style='float:left;margin-right:.3em;'></span>
                                        <strong>Alert:</strong>
                                        {{ alert }}
                                    </p>
                                </div>
                            </div><br />
                        </div>
                    {% endfor %}
                {% endif %}
            {% endblock %}
        {% endblock %}
        {% block content %}
        {% endblock %}
    </body>
</html>