    {% block scripts %}
        <script type="text/javascript" src="/js/jquery.jplayer.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function(){
                $.ajaxSetup({cache: false});
                setInterval(function() {
                    $('#announcer').load('/meta');;
                }, 3000);
                $("#jquery_jplayer_1").jPlayer({
                    ready: function () {
                        $(this).jPlayer("setMedia", {
                            title: "7chan Radio",
                            oga: "http://radio.7chan.org:8000/radio",
                            mp3: "http://radio.7chan.org:8000/radio"
                        });
                    },
                    cssSelectorAncestor: "#jp_container_1",
                    swfPath: "/js",
                    supplied: "oga, mp3",
                    useStateClassSkin: true,
                    autoBlur: false,
                    smoothPlayBar: true,
                    keyEnabled: true,
                    remainingDuration: true,
                    toggleDuration: true
                });
                $("#listen-button").click(function(e) {
                    $("#hidden").toggle("fast");
                    $("#shown").toggle("fast");
                    $(".jp-play").trigger(e.type);
            });
        });
        </script>
    {% endblock %}
{% endblock %}