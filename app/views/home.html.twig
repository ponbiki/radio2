                <div id="hidden" class="row center" style="display: none;">
                    <div id="jquery_jplayer_1" class="jp-jplayer"></div>
                    <div id="jp_container_1" class="jp-audio" role="application" aria-label="media player">
                        <button class="btn-floating waves-effect waves-light blue jp-mute" role="button" tabindex="0"><i class="material-icons">volume_off</i></button>
                        <button class="btn-large waves-effect waves-light blue jp-play" role="button" tabindex="0"><i class="material-icons">play_arrow</i></button>
                        <button class="btn-large waves-effect waves-light blue jp-stop" role="button" tabindex="0"><i class="material-icons">stop</i></button>
                        <button class="btn-floating waves-effect waves-light blue jp-volume-max" role="button" tabindex="0"><i class="material-icons">volume_up</i></button>
